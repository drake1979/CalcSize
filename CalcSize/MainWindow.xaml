<Window x:Class="CalcSize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcSize"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Add dir..." HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Cancel" HorizontalAlignment="Left" Margin="90,11,0,0" VerticalAlignment="Top" Width="75"/>
        <ListBox DisplayMemberPath="FullText" x:Name="listBox" HorizontalAlignment="Left" Height="273" Margin="10,36,0,0" VerticalAlignment="Top" Width="497"/>

    </Grid>
</Window>
